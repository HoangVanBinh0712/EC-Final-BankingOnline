<div class="khongduocxoa"></div>
<div class="w3l-news" id="news">
  <section id="grids5-block" class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="grids5-info">
            <form method="post" action="/TaiKhoan/TaoThongTin">
              {{#if message}}
                <div
                  style="text-align: center"
                  class="alert alert-{{message.type}}"
                >
                  <button
                    type="button"
                    class="close"
                    data-dismiss="alert"
                  >&times;</button>
                  <strong>{{message.intro}}</strong>
                  {{message.message}}
                </div>
              {{/if}}
              <div class="form-group">
                <label for="exampleInputEmail1">Tên Tài Khoản: </label>
                <input
                  type="text"
                  class="form-control"
                  id="TenTK"
                  name="TenTK"
                />
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Email: </label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="email"
                />
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">CCCD:</label>
                <input type="text" class="form-control" name="CCCD" />
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Ngày Sinh: </label>
                <input type="date" class="form-control" name="NgaySinh" />
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Số Tài Khoản: </label>
                <input type="text" class="form-control" name="STK" />
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>