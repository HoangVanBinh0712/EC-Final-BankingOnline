<div class="w3l-news" id="news">
    <section id="grids5-block" class="py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            {{#if message}}
            <div style="text-align: center" class="alert alert-{{message.type}}">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>{{message.intro}}</strong> {{message.message}}
            </div>
            {{/if}}
            {{#if lichsuchuyentien}}
            <p>Lịch sử chuyển tiền: </p>
            <div class="row mt-lg-5 mt-4">
                {{#each lichsuchuyentien}}
                <div class="col-lg-4 col-md-6 mt-md-0 mt-5">
                    <div class="grids5-info">
                        <div class="card-body">
                            <h5 class="card-title">Người chuyển: {{this.NguoiChuyen}}</h5>
                            <p class="card-text">Người nhận: {{this.NguoiNhan}}</p>
                            <p class="card-text">Số tiền: {{this.SoTien}}</p>
                            <p class="card-text">Nội dung giao dịch: {{this.NoiDung}}</p>                          
                            <p class="card-text"><span class="fa fa-calendar mr-2"></span>Ngày giao dịch: {{dateFormat this.Ngay "DD / MM / YYYY"}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{else}}
            <p>Bạn chưa chuyển tiền lần nào !</p>
            {{/if}}

            {{#if lichsunhantien}}
            <p>Lịch sử nhận tiền: </p>
            <div class="row mt-lg-5 mt-4">
                {{#each lichsunhantien}}
                <div class="col-lg-4 col-md-6 mt-md-0 mt-5">
                    <div class="grids5-info">
                        <div class="card-body">
                            <h5 class="card-title">Người chuyển: {{this.NguoiChuyen}}</h5>
                            <p class="card-text">Người nhận: {{this.NguoiNhan}}</p>
                            <p class="card-text">Số tiền: {{this.SoTien}}</p>
                            <p class="card-text">Nội dung giao dịch: {{this.NoiDung}}</p>                          
                            <p class="card-text"><span class="fa fa-calendar mr-2"></span>Ngày giao dịch: {{dateFormat this.Ngay "DD / MM / YYYY"}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{else}}
            <p>Bạn chưa nhận tiền lần nào !</p>
            {{/if}}
        </div>
    </section>
</div>